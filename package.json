{
  "name": "@fracipolla/clarity",
  "version": "0.1.16",
  "description": "A minimal reactive UI framework with compiler-driven syntax",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/",
    "templates/",
    "create.js"
  ],
  "bin": {
    "clarity": "./create.js"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "prepare": "npm run build"
  },
  "keywords": [
    "reactive",
    "ui",
    "framework",
    "compiler",
    "vite-plugin"
  ],
  "author": "Matteo Cipolla",
  "license": "MIT",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./ts-plugin": {
      "import": "./dist/ts-plugin/index.js",
      "types": "./dist/ts-plugin/index.d.ts"
    },
    "./runtime": {
      "import": "./dist/runtime/index.js",
      "types": "./dist/runtime/types.d.ts"
    },
    "./preprocess": {
      "import": "./dist/preprocess/index.js",
      "types": "./dist/preprocess/types.d.ts"
    },
    "./vite-plugin": {
      "import": "./dist/vite-plugin.js",
      "types": "./dist/vite-plugin.d.ts"
    },
    "./types": {
      "import": "./dist/types.d.ts",
      "types": "./dist/types.d.ts"
    },
    "./package.json": "./package.json"
  },
  "devDependencies": {
    "@types/express": "^5.0.5",
    "@types/node": "^20.19.25",
    "typescript": "^5.6.0",
    "vite": "^7.2.4"
  },
  "dependencies": {
    "express": "^5.1.0",
    "ts-morph": "^18.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
