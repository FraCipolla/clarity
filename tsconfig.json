{
    "compilerOptions": {
      "skipLibCheck": true,
      "target": "ES2020",
      "module": "ES2020",
      "moduleResolution": "Node",
      "lib": ["ES2020", "DOM"],
      "declaration": true,
      "declarationMap": true,
      "sourceMap": true,
      "rootDir": "src",
      "outDir": "dist",
      "strict": true,
      "esModuleInterop": true
    },
    "include": ["src"],
    "exclude": ["dist", "node_modules"]
  }
  